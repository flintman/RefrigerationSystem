<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Allow network sockets -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required on Android 13+ to post notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_refrigeration"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_refrigeration"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlintmansTechTool">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FlintmansTechTool">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StatusActivity" android:exported="false" />
        <activity android:name=".ConfigActivity" android:exported="false" />
        <activity android:name=".LogActivity" android:exported="false" />
    </application>

</manifest>